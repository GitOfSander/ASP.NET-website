<section class="newspaper f-df fc-light">
    <div class="container">
        <div class="row">
            <div class="col-md-59">
                <div class="highlight">
                    @Html.Raw(Model.GetWebsiteResourceByCallName(Model.WebsiteBundle, "NewspaperText"))
                </div>
            </div>

            <div class="col-md-34 col-md-offset-7 cf-df cf-c-light">
                <form id="mail">
                    <div class="form-group">
                        <label for="name">Naam</label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="Uw naam">
                        <div class="cf-bar"></div>
                    </div>
                    <div class="form-group last">
                        <label for="email">E-mailadres</label>
                        <input type="text" class="form-control" id="email" name="email" placeholder="Uw e-mailadres">
                        <div class="cf-bar"></div>
                    </div>

                    <submit class="btn btn-success btn-c-light pull-right" id="addEmail">
                        Verzenden
                        <svg version="1.1" class="right-arrow" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
                                viewBox="0 0 28.8 16.9" style="enable-background:new 0 0 28.8 16.9;" xml:space="preserve">
                        <g>
                                                            <path class="st0" d="M1.2,7.3h23.4l-5.1-5.2c-0.6-0.5-0.6-1.1,0-1.7s1.1-0.6,1.7,0l7.2,7.2c0.1,0.1,0.2,0.2,0.3,0.4
		                        s0.1,0.3,0.1,0.4s0,0.3-0.1,0.4s-0.1,0.3-0.3,0.4l-7.2,7.2c-0.5,0.6-1.1,0.6-1.7,0c-0.6-0.6-0.6-1.1,0-1.7l5.1-5.2H1.2
		                        c-0.3,0-0.6-0.1-0.9-0.3S0,8.8,0,8.5s0-0.3,0-0.3s0.1-0.3,0.3-0.5S0.8,7.3,1.2,7.3z" />
                        </g>
                        </svg>
                    </submit>

                    <div class="row">
                        <div class="col-xs-100 cf-result" id="cfResult">
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="row subscribe-text">
            <div class="col-xs-100">
                @Html.Raw(Model.GetWebsiteResourceByCallName(Model.WebsiteBundle, "subNpText"))
            </div>
        </div>
        <div class="row unsubscribe-newspaper" id="unsubText">
            <div class="col-xs-100">
                @Html.Raw(Model.GetWebsiteResourceByCallName(Model.WebsiteBundle, "ubsubFText"))
            </div>
        </div>
    </div>
</section>

<!-- Unsubscribe newspaper modal -->
<div class="modal fade modal-unsub" id="unsubModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form class="modal-content" id="unsub">
            <div class="modal-header">
                <div class="svg">
                    <svg version="1.1" id="Layer_1" width="25px"height="19px" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 11.8 8.5" style="enable-background:new 0 0 11.8 8.5;" xml:space="preserve"><g><path d="M5.9,5.8L4.5,4.6L0.5,8c0.1,0.1,0.3,0.2,0.6,0.2h9.6c0.2,0,0.4-0.1,0.5-0.2l-4-3.4L5.9,5.8z M5.9,5.8" /><path d="M11.2,0.5c-0.1-0.1-0.3-0.2-0.5-0.2H1.1c-0.2,0-0.4,0.1-0.6,0.2L5.9,5L11.2,0.5z M11.2,0.5" /><path d="M0.3,0.9v6.6l3.9-3.3L0.3,0.9z M0.3,0.9" /><path d="M7.6,4.3l3.9,3.3V0.9L7.6,4.3z M7.6,4.3" /></g></svg>
                </div>
                <h5 class="modal-title" id="exampleModalLabel">@Html.Raw(Model.GetWebsiteResourceByCallName(Model.WebsiteBundle, "unsubNpTitle"))</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <div class="row">
                    <div class="col-xs-100 cf-result" id="cfResult"></div>
                    <span class="col-xs-100" id="message">@Html.Raw(Model.GetWebsiteResourceByCallName(Model.WebsiteBundle, "unsubNpSubtitle"))</span>
                </div>
            </div>
            <div class="modal-body cf-df">
                <div class="form-group">
                    <input type="email" class="form-control" id="email" name="email" placeholder="Uw e-mailadres">
                    <div class="cf-bar"></div>
                </div>

                <div class="row">
                    <div class="col-xs-100 modal-text">
                        @Html.Raw(Model.GetWebsiteResourceByCallName(Model.WebsiteBundle, "unsubNpText"))
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuleren</button>
                <submit class="btn btn-primary btn-c-blue" id="unsubEmail">Afmelden</submit>
            </div>
        </form>
    </div>
</div>